            bindings = <&kp DOT>;
            layers = <0 1 2>;
        };
        combo_colon {
            timeout-ms = <20>;
            key-positions = <RB1 RB3>;
            bindings = <&kp COLON>;
            layers = <0 1 2>;
        };
        combo_comma {
            timeout-ms = <20>;
            key-positions = <RB3 RB4>;
            bindings = <&kp COMMA>;
            layers = <0 1 2>;
        };
        combo_semi {
            timeout-ms = <20>;
            key-positions = <RB2 RB4>;
            bindings = <&kp SEMI>;
            layers = <0 1 2>;
        };
};






            bindings = <&kp QMARK>;
            layers = <0 1 2>;
        };
        combo_excl {
            timeout-ms = <20>;
            key-positions = <RB1 RB4>;
            bindings = <&kp EXCL>;
            layers = <0 1 2>;
        };
        combo_dot {
            timeout-ms = <20>;

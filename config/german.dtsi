#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    behaviors {
        unicode_german: unicode_german {
            compatible = "zmk,behavior-unicode";
            #binding-cells = <1>;
            hex-mode = <UC_MAC>; // For macOS
            label = "UNICODE_GERMAN";
        };
    };

    macros {
        german_ae: de_ae {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&unicode_german 0x00E4>;
            label = "GERMAN_AE";
        };
        
        german_oe: de_oe {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&unicode_german 0x00F6>;
            label = "GERMAN_OE"; 
        };
        
        german_ue: de_ue {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&unicode_german 0x00FC>;
            label = "GERMAN_UE";
        };
        
        german_eszett: de_eszett {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&unicode_german 0x00DF>;
            label = "GERMAN_ESZETT";
        };
    };
};
